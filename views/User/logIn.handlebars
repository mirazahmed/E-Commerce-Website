




<h1 id="signIn">Please Sign-In</h1>

<form method="POST" action ="/user/logIn" >
    <fieldset id="logInFieldset">
           
        <label for ="email">Email</label> <br>
        <input type="text" id="email" name="email"> <br> <br>
        
        {{!-- {{#each errorMessages}}
