 

 <h1>Welcome to product search</h1>
 
 <div class="container-fluid mx-0 px-0" >
        <div class="row justify-content-between mx-0">
            
               {{#each data}}
                 <div class="col-md-3" id ="sampleProducts">
                     <img class="img-fluid py-3" src="/uploads/{{this.productPic}}">
                    <p class="text-center py-3 my-0" id="title">
                    {{this.prodTitle}}
                    </p>
                    
                    <p class="text-center" id="price">
                        Price: {{this.price}}
                    </p>
                    <p class="text-center" id="category">
                        Category: {{this.category}}
                    </p>
                    <p class="text-center" id="bestSeller">
                        Best Seller: {{this.bestSeller}}
                     </p>
                 </div>

                {{/each}}                  
            
        </div>
    </div>