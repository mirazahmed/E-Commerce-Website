<section class="product-container">

    <h2 id="shoppingCart">{{user.firstName}} {{user.lastName}}'s Shopping Cart</h2>   
    <table class="table table-hover table-bordered">
        <thead class="thead-dark">
                <th></th>
                <th>Title</th>
                <th>Price</th>
                <th>Qty Purchased</th>
                <th>Total</th>
        </thead>
        <tbody>
            {{#each data}}
                <tr>
                    <td>
                        <img class="img-fluid py-3" name="productPic" src="/uploads/{{this.productPic}}">
                    </td>
                   <td>
                        <a href="" class="product-title" name="prodTitle">{{this.prodTitle}}</a>
                   </td>
                   <td>
                       <span name="price">{{this.price}}</span>
                      
                   </td>
                   <td>
                       <span name="qtyPurchased">{{this.qtyPurchased}}</span>
                      
                   </td>
                   <td>
                       <span name="total">{{this.total}}</span>
                   </td>
                </tr>
            
            {{/each}}        
    </tbody>
    </table>
    <div id="orderTotal">
        <span name="orderTotal">Order Total = {{sumTotal data}}</span>
    </div>
    
    <div class="text-center">
        {{!-- id="product-links-holder" --}}
        <a href="/product/display" id="orderPlaceBtn" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Add a Product</a>
        {{!-- <a href="/product/display" class="addProduct">Add a Product</a> --}}
    </div>

</section>

