

<div class="container-fluid mx-0 px-0" id="productDetailsClass">
    <div class="row justify-content-around mx-0">
            
            <div class="col-md-6" id ="Product">
                 <img class="img-fluid py-3" name="productPic" src="/uploads/{{productPic}}">
             </div>
       
            <div class="col-md-6 justify-content-center">
                    <p class="text-center py-3 my-0" name="prodTitle">
                    {{prodTitle}}
                    </p>
                    <p class="text-center" name="description">
                        Description : 
                        {{description}}
                    </p>
                    <p class="text-center" name="price">
                        Price : 
                        {{price}}
                    </p>
                    <p class="text-center">
                        Quantity Available : {{quantity}}
                    </p> <br> <br>
                    <p>
                        <form method="POST" action="/product/productDetails/{{_id}}">
                            <label>Add Quantity</label>
                            <input type="number" name="addQty"> <br>

                           <input type="submit" value="Add to Cart"> 
                        </form>
                        
                    </p> 
            </div>                
                                     
    </div>
</div>

