<section>
    <div id="promotionSection">
    {{!-- <h1>Promotion Section</h1> --}}
    <img class="img-fluid" src="/images/bigsale.jpg" alt="PromotionBanner">
    <div class="promotionMsg">Upto 50% SALE is On!!</div>

    {{!-- class="col-lg-4 col-sm-6 --}}
</div>

</section>
    <div class="d-flex justify-content-center " id="prodCatSection">
        <a href="/products/list" id="productCatHeading">Product Categories</a>
    </div>
    
    <div class="container-fluid mx-0 px-0" id ="prodCategories">
        <div class="row justify-content-between mx-0">
            
                {{#each products}}
                 <div class="col-md-3" id ="sampleProducts">
                    <p class="text-center py-3 my-0" id="productTitle">
                    {{this.title}}
                    </p>
                    <img class="img-fluid pb-3" src={{this.picturePath}}>
                 </div>
                {{/each}}                  
            
        </div>
    </div>

   
    <div class="d-flex justify-content-center" id="bestSoldSection">
        <a href="#" id="bestSoldHeading">Best Sold Items</a>
    </div>
    
    <div class="container-fluid mx-0 px-0" id ="prodCategories">
        <div class="row justify-content-between mx-0">
            
                {{#each bestSoldItems}}
                 <div class="col-md-3">
                    <p class="text-center py-3 my-0" id="bestSoldItemName">
                    {{this.title}}
                    </p>
                    <img class="img-fluid pb-3" src={{this.picturePath}}>
                 </div>
                {{/each}}                  
            
        </div>
    </div>


